<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%-include("./partials/navbar") %>

    <section class="container">
      <!-- Flash -->
      <%-include("./partials/messages") %>

      <div class="d-flex justify-content-between pt-4">
        <h2 class="d-inline">List of users.</h2>

        <a href="/panel/admin/usersList"><button class="btn btn-dark btn-m">Users</button></a>
        <a href="/panel/admin/crear"><button class="btn btn-success btn-m">New</button></a>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-hover border shadow mt-5">
          <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Firstname</th>
              <th scope="col ">Lastname</th>
              <th scope="col">Email</th>
              <th scope="col">roleCode</th>
              <th scope="col">Options</th>
            </tr>
          </thead>
          <tbody>
            <% for(user of users) { %>
            <tr>
              <th scope="row"><%= user.id %></th>
              <td><%= user.firstname %></td>
              <td><%= user.lastname %>...</td>
              <td><%= user.email %></td>
              <td><%= user.roleCode %></td>

              <td>
                <a href="/panel/admin/<%=user.id%>/edit "
                  ><button class="btn btn-dark mb-2 w-100">Edit</button></a
                >

                <a href="/panel/admin/<%=user.id%>/destroy/"
                  ><button type="button" class="btn btn-danger w-100">Delete</button></a
                >
              </td>
              <% } %>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <%-include("./partials/footer") %>

    <script src="js/app.js"></script>

    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
